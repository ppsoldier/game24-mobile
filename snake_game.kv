<SnakeSegment>:
    canvas:
        Color:
            rgba: 0, 1, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0, 0.8, 0, 1
        Rectangle:
            pos: self.x + 2, self.y + 2
            size: self.width - 4, self.height - 4

<Food>:
    canvas:
        Color:
            rgba: 1, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.8, 0, 0, 1
        Rectangle:
            pos: self.x + 3, self.y + 3
            size: self.width - 6, self.height - 6

<SnakeGame>:
    canvas:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    Label:
        text: f'Score: {root.score}'
        font_size: '24sp'
        size_hint: None, None
        size: self.texture_size
        pos: 10, root.height - 40
        color: 1, 1, 1, 1
    
    Label:
        text: 'Game Over!' if root.game_over else ''
        font_size: '48sp'
        size_hint: None, None
        size: self.texture_size
        pos: root.center_x - self.width / 2, root.center_y - self.height / 2
        color: 1, 0, 0, 1
        opacity: 1 if root.game_over else 0
    
    Label:
        text: 'Tap or Press R to Restart' if root.game_over else ''
        font_size: '20sp'
        size_hint: None, None
        size: self.texture_size
        pos: root.center_x - self.width / 2, root.center_y - self.height / 2 - 60
        color: 1, 1, 1, 1
        opacity: 1 if root.game_over else 0
    
    Label:
        text: 'Swipe or use arrow keys to move'
        font_size: '16sp'
        size_hint: None, None
        size: self.texture_size
        pos: root.center_x - self.width / 2, 20
        color: 0.7, 0.7, 0.7, 1
        opacity: 0 if root.game_over else 1
